@using Kendo.Mvc.UI;
@model Silicus.Ensure.Models.DataObjects.Tags

<div class="col-md-12">
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.TagName)
        </div>

        <div class="col-md-4">
            @Html.TextBoxFor(model => model.TagName)
        </div>
        <div class="col-md-4">
            @Html.ValidationMessageFor(m => m.TagName)
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.LabelFor(m => m.Description)
        </div>

        <div class="col-md-4">
            @Html.TextAreaFor(model => model.Description, new { @rows = "5" })
        </div>
        <div class="col-md-4">
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>
</div>


