@model IEnumerable<Silicus.EncourageWithAzureAd.Web.Models.LockAwardViewModel>
<style>
    td {
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>
@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
    </tr>
    
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding-left:20%">
                    @Html.CheckBoxFor(modelItem => item.Status, htmlAttributes: new { style = "display:block;height:20px;width:20px;", id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    
</table>
}
else
{
    @Html.Label("Sorry! No award categories available", htmlAttributes: new { style = "color:red"})
}
