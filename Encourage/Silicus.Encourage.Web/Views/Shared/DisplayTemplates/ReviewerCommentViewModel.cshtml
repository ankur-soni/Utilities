@model Silicus.Encourage.Web.Models.ReviewerCommentViewModel

<tr>
    <td>
        @Html.HiddenFor(modelItem => modelItem.Id)
    </td>
    <td class="col-md-6">
        @Html.DisplayFor(modelItem => modelItem.title)
    </td>

    <td class="col-md-6">
        @Html.TextAreaFor(modelItem => modelItem.Comment, htmlAttributes: new { @class = "col-md-12", @readonly = "readonly" })
    </td>
</tr>

