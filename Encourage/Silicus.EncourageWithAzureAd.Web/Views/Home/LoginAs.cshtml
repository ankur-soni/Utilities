@model Silicus.EncourageWithAzureAd.Web.Models.LoginAs
@{
    ViewBag.Title = "Login As";
}

<div class="row white-bg header-row">
    <nav class="" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
        </div>
    </nav>
    <div class="col-lg-11 col-md-11 col-sm-11">
        <h1 class="header-name">Login As</h1>
    </div>
</div>
<div class="">
    <div class="row">
        <div class="col-sm-12">
            <div class="box M-T15 M-B60">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 text-danger">
                            @Html.ValidationMessage("error")
                        </div>
                    </div>
                    
                    @using (Html.BeginForm("LoginAs", "Home", FormMethod.Post, new { id = "frmLoginAs" }))
                    {
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-5">
                                <div class="form-group">
                                    @Html.Label("Login As Username", htmlAttributes: new { @class = "control-label requiredfeild" })
                                    <div>
                                        @Html.TextBoxFor(u => u.Username, new { @class = "form-control", maxlength = 200, required = "" })
                                        @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" value="Login"> Login</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                </div>
        </div>
    </div>
</div>