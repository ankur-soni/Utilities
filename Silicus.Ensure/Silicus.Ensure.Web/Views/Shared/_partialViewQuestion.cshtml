                                <label >@Model.Option3</label>
                            }
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio4">
                            @if (Model.Answer.Trim() == "4")
                            {
                                <input type="radio"  name="optradio" value="4" checked="checked">
                                <label >@Model.Option4</label>
                            }
                            else
                            {
                                <input type="radio"  name="optradio" value="4">
                                <label >@Model.Option4</label>
                            }
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio5">
                            @if (Model.Answer.Trim() == "5")
                            {
                                <input type="radio"  name="optradio" value="5" checked="checked">
                                <label >@Model.Option5</label>
                            }
                            else
                            {
                                <input type="radio" name="optradio" value="5">
                                <label >@Model.Option5</label>
                            }
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio6">
                            @if (Model.Answer.Trim() == "6")
                            {
                                <input type="radio"  name="optradio" value="6" checked="checked">
                                <label >@Model.Option6</label>
                            }
                            else
                            {
                                <input type="radio"  name="optradio" value="6">
                                <label >@Model.Option6</label>
                            }
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio7">
                            @if (Model.Answer.Trim() == "7")
                            {
                                <input type="radio"  name="optradio" value="7" checked="checked">
                                <label >@Model.Option7</label>
                            }
                            else
                            {
                                <input type="radio"  name="optradio" value="7">
                                <label >@Model.Option7</label>
                            }
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio8">
                            @if (Model.Answer.Trim() == "8")
                            {
                                <input type="radio"  name="optradio" value="8" checked="checked">
                                <label >@Model.Option8</label>
                            }
                            else
