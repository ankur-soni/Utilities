@using System.Configuration
@using Microsoft.Owin.Security
@model Silicus.Ensure.Web.Models.LoginModel

@{
    ViewBag.Title = "Sign in";
    // var loginProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
}

<div class="login-wrapper login-register logincontainer">
    <div id="loginbox mainbox" class="login-box">
        <div class="white-box">
            <div class="logo">
                <img src="~/Images/silicus/logo.png" />
            </div>
            <div class="form-horizontal form-material">
                <u tabindex="1">@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "box-title1 M-B20" })</u>
                @*<a id="loginLink" href="#"><h3 class="box-title m-b-20">Sign In</h3></a>*@
                @using (Html.BeginForm("Login", "CandidateAccount", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl, @id = "loginform" }))
                {
                    <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input tabindex="2" class="form-control" id="UserName" name="UserName" type="text" required="" placeholder="Username">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input tabindex="3" class="form-control" id="Password" name="Password" type="password" required="" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input tabindex="4" id="login-remember" type="checkbox">
                                <label class="rememberMe" for="login-remember"> Remember me </label>
                            </div>
                            <a href="@Url.Action(" forgotpassword", "Account" )" tabindex="5" id="to-recover" class="forgotPassword text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button tabindex="6" type="submit" value="Sign In" id="btn-login" style="background:#0070b9;" class="btn btn-info btn-lg btn-block text-uppercase">Log In</button>
                        </div>
                    </div>
                }
          </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}