    <div class="row">
        <div class="col-sm-12 col-xs-12 col-lg-12 col-md-12">
            <div class="panel panel-default" id="extensionform">
                <div class="panel-heading">
                    <h2>@Html.DisplayFor(model => model.MethodName)</h2>
                </div>
                <div class="panel-body">
                    <div id="descriptiondiv">
                        <h3>Description</h3>
                        @Html.DisplayFor(model => model.Description)
                    </div>
                    <div>
                        <pre class="prettyprint">
                        <code title="The caption for this block">
                                 @Html.DisplayFor(model => model.Code)
                            </code>
                        </pre>
                    </div>
                    <div id="exampleusage">
                        <h3>Example</h3>
                        @Html.DisplayFor(model => model.ExampleUsage)
                    </div>
                    <div id="exampleusage">
                        <h4>Submitted by : @Html.DisplayFor(model => model.UserDisplayName)</h4>
                        <h5>Date: @Html.DisplayFor(model=>model.CreationDate)</h5>
                    </div>
                    @using(Html.BeginForm())
                    {
                        @Html.HiddenFor(model => model.MethodName)
                        @Html.HiddenFor(model => model.Code)
                        @Html.HiddenFor(model => model.CodeTypeId)
                        @Html.HiddenFor(model => model.Description)
                        @Html.HiddenFor(model => model.ExampleUsage)
                        @Html.HiddenFor(model => model.UserDisplayName)
                        @Html.HiddenFor(model => model.userid)
                        @Html.HiddenFor(model => model.CreationDate)
                        @Html.HiddenFor(model => model.FrequentSearchedCount)

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Approve" class="btn btn-primary" />
                                @Html.ActionLink("Reject", "ReviewExtensionCodeList", "", new { @class = "btn btn-info" })
                                @Html.ActionLink("Edit", "EditExtensionCode", new { id = Model.Id}, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>