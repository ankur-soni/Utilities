@model List<Silicus.Ensure.Web.Models.CandidateHistoryViewModel>

@using Silicus.Ensure.Models.Constants;
@using Kendo.Mvc.UI;


@{
    ViewBag.Title = "Add Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row white-bg header-row">
    <nav class="" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary" id="menu-toggle" style="margin-left:15px;border-radius:0px;" href="#"><i class="fa fa-bars"></i> </a>
        </div>
    </nav>

    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <h1 class="dashboard-name">Candidate History</h1>
    </div>


</div>

@{int count = 0; }
@foreach (var candidateApplicationDetails in Model)
{
    count = count + 1;
    <div class="row">
        <div class="col-sm-12">
            <div class="box M-T15 ">
                <div class="f1">
                    <div class="main-content">
                        <h3>
                            @count     &emsp;     <b> Candidate  Name : </b>   @Html.DisplayFor(model => candidateApplicationDetails.FirstName)   @Html.DisplayFor(model => candidateApplicationDetails.LastName)
                            <div style="float:right">
                                <b> Candidate Status : </b>   @Html.DisplayFor(model => candidateApplicationDetails.CandidateStatus)
                            </div>
                        </h3>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="box M-T15 M-B60">
                <div class="f1">
                    <div class="main-content">
                        <input type="hidden" id="Role" name="Role" value="@Silicus.Ensure.Models.Constants.RoleName.Candidate.ToString()" />
                        <h3>  <b> Candidate Profile</b> </h3><br /><br />
                        <div class="fluid mt20">
                            <div class="row" style="margin-bottom:10px!important">

                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.FirstName)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.FirstName)

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.MiddleName)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.MiddleName)
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.LastName)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.LastName, new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.Position)
                                    </div>
                                    <div class="col-md-6">


                                        <div class="col-md-8 col-sm-10 col-xs-10" style="padding-left:0;padding-right:0;height:30px;">

                                            @Html.DisplayFor(model => candidateApplicationDetails.Position)

                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.RequisitionId)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.RequisitionId, new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.Gender)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.Gender, new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.Email)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.Email, new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.CurrentLocation)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.CurrentLocation, new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.DOB)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.DOB, new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.ContactNumber)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.ContactNumber, new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.ClientName)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.ClientName, new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.Technology)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.Technology, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">

                                    <div class="col-md-6">
                                        <lable>Total experience</lable>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-6 col-sm-6 col-xs-6" style="padding-left:0">
                                            @Html.DisplayFor(model => candidateApplicationDetails.TotalExperienceInYear, new { @class = "form-control" })
                                            Years

                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6" style="padding-right:0">
                                            @Html.DisplayFor(model => candidateApplicationDetails.TotalExperienceInMonth, new { @class = "form-control" }) Months

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        <lable>Relevant experience</lable>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-md-6 col-sm-6 col-xs-6" style="padding-left:0">
                                            @Html.DisplayFor(model => candidateApplicationDetails.RelevantExperienceInYear, new { @class = "form-control" })
                                            Years

                                        </div>
                                        <div class="col-md-6 col-sm-6 col-xs-6" style="padding-right:0">

                                            @Html.DisplayFor(model => candidateApplicationDetails.RelevantExperienceInMonth, new { @class = "form-control" })
                                            Months
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.CurrentCompany)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.CurrentCompany, new { @class = "form-control" })

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        @Html.LabelFor(model => candidateApplicationDetails.CurrentTitle)
                                    </div>
                                    <div class="col-md-6">
                                        @Html.DisplayFor(model => candidateApplicationDetails.CurrentTitle, new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom:10px!important">
                                <div class="col-md-6">
                                    <div class="col-md-6">
                                        Upload Resume
                                    </div>
                                    <div class="col-md-6">
                                        <div class="outer-box">
                                            <div class="demo-section k-content">

                                            </div>
                                            @if (!string.IsNullOrWhiteSpace(candidateApplicationDetails.ResumeName))
                                            {
                                                <div id="uploadFileLink" class="postuploadedfilesholder clearfix">
                                                    <div class="fileupload M-T5">
                                                        <a href="@System.Configuration.ConfigurationManager.AppSettings["ServerName"]@Html.Raw(Url.Content(candidateApplicationDetails.ResumePath))" targ target="_blank">
                                                            <i class="fa fa-file-text-o" aria-hidden="true"></i>

                                                            @Html.Raw(candidateApplicationDetails.ResumeDisplayName)
                                                        </a>
                                                        <span class="deleteupload" title="Delete"><a onclick="DeleteF()"><i class="fa fa-window-close" aria-hidden="true"></i></a></span>
                                                    </div>
                                                </div>

                                            }
                                        </div>
                                        <span class="k-invalid-msg" data-for="files"></span>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <br />
                        <h3>
                            <b> Candidate Test Details</b>

                        </h3> <br />
                        @if (candidateApplicationDetails.TestSuiteViewModel != null)
                        {
                            <div class="row">
                                <div class="col-sm-12">
                                    <b> Test  Date : </b>   @Html.DisplayFor(model => candidateApplicationDetails.ApplicationDate)   &emsp;&emsp;&emsp; <a class="k-button k-button-icontext" href="/Admin/ViewQuestion?TestSuiteId=@candidateApplicationDetails.TestSuiteViewModel.TestSuiteId &UserId=@candidateApplicationDetails.TestSuiteViewModel.Userid"><span class="k-icon k-edit"></span>View Test</a>
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>No.</th>
                                                    <th>Field Name</th>
                                                    <th>Value</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <th scope="row">1</th>
                                                    <td>@Html.LabelFor(model => candidateApplicationDetails.TestSuiteViewModel.TestSuiteName)</td>
                                                    <td>@Html.DisplayFor(model => candidateApplicationDetails.TestSuiteViewModel.TestSuiteName, new { @class = "form-control" })</td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">2</th>
                                                    <td>@Html.LabelFor(model => candidateApplicationDetails.TestSuiteViewModel.Duration)</td>
                                                    <td>@Html.DisplayFor(model => candidateApplicationDetails.TestSuiteViewModel.Duration, new { @class = "form-control" })</td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">3</th>
                                                    <td>@Html.LabelFor(model => candidateApplicationDetails.TestSuiteViewModel.Position)</td>
                                                    <td>@Html.DisplayFor(model => candidateApplicationDetails.TestSuiteViewModel.PositionName, new { @class = "form-control" })</td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">4</th>
                                                    <td>@Html.LabelFor(model => candidateApplicationDetails.TestSuiteViewModel.Competency)</td>
                                                    <td>@Html.DisplayFor(model => candidateApplicationDetails.TestSuiteViewModel.OverallProficiency, new { @class = "form-control" })</td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">5</th>
                                                    <td><label>Question type</label></td>
                                                    <td>
                                                        <label>Optional @Html.DisplayFor(m => candidateApplicationDetails.TestSuiteViewModel.OptionalQuestion, new { @class = "form-control" }) %</label>
                                                    </td>
                                                    <td><label>Practical @Html.DisplayFor(m => candidateApplicationDetails.TestSuiteViewModel.PracticalQuestion, new { @class = "form-control" }) %</label></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">6</th>
                                                    <td>@Html.LabelFor(model => candidateApplicationDetails.TestSuiteViewModel.ProjectName)</td>
                                                    <td>@Html.DisplayFor(model => candidateApplicationDetails.TestSuiteViewModel.ProjectName, new { @class = "form-control" })</td>
                                                    <td></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">7</th>
                                                    <td><label>Experience</label></td>
                                                    <td>@candidateApplicationDetails.TestSuiteViewModel.FromExperience.@candidateApplicationDetails.TestSuiteViewModel.ToExperience</td>
                                                    <td></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="table-responsive M-T30">
                                        <table class="table table-striped">

                                            <thead>
                                                <tr>
                                                    <th>Skill tag name</th>
                                                    <th>Weightage % </th>
                                                    <th>Efficiency</th>
                                                </tr>
                                            </thead>

                                            @if (candidateApplicationDetails.TestSuiteViewModel.Tags != null)
                                        {
                                            if (candidateApplicationDetails.TestSuiteViewModel.Tags.Count() > 0)
                                            {
                                                for (int i = 0; i < candidateApplicationDetails.TestSuiteViewModel.Tags.Count(); i++)
                                                {
                                        <tbody>
                                            <tr>

                                                <td id="tag_name_row @Convert.ToString(i)">@candidateApplicationDetails.TestSuiteViewModel.Tags[i].TagName</td>
                                                <td id="weight_name_row @Convert.ToString(i)">@candidateApplicationDetails.TestSuiteViewModel.Tags[i].Weightage</td>
                                                <td id="efficiency_name_row @Convert.ToString(i)">@candidateApplicationDetails.TestSuiteViewModel.Tags[i].Proficiency</td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                                }
                                            }
                                        }
                                        </table>
                                    </div>


                                </div>
                            </div>
                        }
                        else
                        {
                            <b>No Test Details Found</b>
                        }




                    </div>
                </div>
            </div>
        </div>
    </div>

}
