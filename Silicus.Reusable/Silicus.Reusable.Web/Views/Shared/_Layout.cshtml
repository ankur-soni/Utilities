<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .top-header {
            background-color: #fff;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 2000;
            height: 100px;
        }

        .bbl {
            border-bottom: 3px solid #e7eaec;
        }

        .mbs, .mvs, .mas {
            margin-bottom: 5px;
        }

        .mts, .mvs, .mas {
            margin-left: 40px;
            margin-top: 5px;
        }

        img {
            vertical-align: middle;
            border: 0;
        }

        .body-content {
            margin: 5% auto;
            padding-bottom: 3%;
        }

        .footer {
            background: none repeat scroll 0 0 white;
            border-top: 1px solid #e7eaec;
            bottom: 0;
            left: 0;
            padding: 10px 20px;
            right: 0;
        }

        .welcome-message {
            font-size: 14px;
            font-weight: 600;
            margin-right: 20px;
        }

        #closebtn {
            position: absolute;
            left: 50%;
            bottom: 1px;

        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <img src="~/Images/logo.jpg" class="img-responsive" alt="logo">
                </div>

                @*<ul class="nav navbar-nav pull-right">
                    @Html.Partial("_LoginPartial")
                    @if (Request.IsAuthenticated)
                    {
                        var userName = @User.Identity.Name;
                        var data = userName.Split('.', '@');
                    <li class="dropdown">
                        
                        <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                            <span class="hidden-sm hidden-xs">
                                <span class="m-r-sm text-muted welcome-message">Welcome Test User</span> <i class="fa fa-chevron-down"></i>
                            </span>
                            <span class="hidden-md hidden-lg">
                                <i class="fa fa-user"></i>
                            </span>
                        </a>
                    </li>
                </ul>*@

                <ul class="nav navbar-top-links navbar-right">
                    @Html.Partial("_LoginPartial")
                    @if (Request.IsAuthenticated)
                    {
                        var userName = @User.Identity.Name;
                        var data = userName.Split('.', '@');
                        <li class="dropdown">
                            <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                                <span class="hidden-sm hidden-xs">
                                    @*<span class="m-r-sm text-muted welcome-message">Welcome @data[0] @data[1]</span> <i class="fa fa-chevron-down"></i>*@
                                </span>
                                <span class="hidden-md hidden-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-user-menu">
                                <li>
                                    <a href='@Url.Action("SignOut", "Account")'>
                                        <div>
                                            LOGOUT
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </nav>
        <div class="container-fluid body-content">
            @RenderBody()
        </div>
        <div class="footer navbar-fixed-bottom">
            <div>
                <strong>&copy;Copyright</strong> 2000 -
                <script>document.write(new Date().getFullYear())</script> Silicus Technologies
            </div>
        </div>


    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
