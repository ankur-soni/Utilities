                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-4">
                            <div class="">
                                @Html.PasswordFor(m => m.NewPassword, new { id = "txtnewpwd", @class = "form-control", placeholder = "New password", tabindex = "2" })
