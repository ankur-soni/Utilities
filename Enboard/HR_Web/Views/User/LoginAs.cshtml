@model Models.ImpersonateUser
@{
    ViewBag.Title = "Login As";
}

<div class="">
    <div class="row">
        <div class="col-sm-12">
            <div class="box M-T15 M-B60">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 text-danger">
                            @Html.ValidationMessage("error")
                        </div>
                    </div>

                    @using (Html.BeginForm("LoginAs", "User", FormMethod.Post, new { id = "frmLoginAs" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="f1">
                            <div class="row">
                                <div class="col-lg-3 col-md-6 col-sm-5 M-B10">
                                    @Html.Label("Login As Email", htmlAttributes: new { @class = "requiredfeild" })
                                    <div class="input-group">

                                        @*@Html.DropDownListFor(model => model.Username, Model.UsersWithMultipleRoles as SelectList, "Select", new { @class = "form-control", id = "UserName", style = "margin-bottom:0px;!important" })
                                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })*@

                                        @Html.TextBoxFor(u => u.Email, new { @class = "form-control", maxlength = 200, required = "" })
                                   

                                        <button  type="submit" value="Login" class="btn btn-primary ml-1"> Login</button>
                                    </div>
                                    @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-actions pull-right">

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
