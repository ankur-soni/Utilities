                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Months, "Month", new { @class = "col-lg-6 col-md-6 col-sm-6 col-xs-6" })
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
