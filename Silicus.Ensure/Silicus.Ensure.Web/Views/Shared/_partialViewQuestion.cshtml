                for(var i=@Model.OptionCount+1; i<=8;i++)
                {
                    $("#checkbox"+i).hide();
                }
            </script>
        }
        else
        {
            <div class="col-sm-12" style="padding: 20px 25px 20px 10px;">
                <ul style="list-style:none;">
                    <li>
                        <div class="checkbox">
                            <input id="optcheckbox1" type="checkbox" name="optcheckbox" value="1">
                            <label >@Model.Option1</label>
                        </div>
