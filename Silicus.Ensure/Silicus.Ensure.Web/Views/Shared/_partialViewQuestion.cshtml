@model Silicus.Ensure.Web.Models.Test.TestDetailsViewModel

@using Kendo.Mvc.UI;


<div class="row">
    <div class="col-sm-12" style="padding:20px 0px 0px 50px;">
        @if (Model.QuestionType == 1)
        {
            <p><strong style="font-size:20px;">Section 1 (Objective question)</strong></p>
            <input type="hidden" value="@Model.QuestionType" id="QuestionType" />
        }
        else
        {
            <p><strong style="font-size:20px;">Section 2 (Practical question)</strong></p>
            <input type="hidden" value="@Model.QuestionType" id="QuestionType" />
        }
        <p><strong style="font-size:15px;">Question @Model.DisplayQuestionNumber: (@Model.Marks Marks)</strong></p>
        @Html.Raw(HttpUtility.HtmlDecode(Model.QuestionDescription))
    </div>
    <div class="col-sm-12">
        <div class="btmBorder"></div>
    </div>
    <input type="hidden" value="@Model.QuestionId" id="QuestionNumber" />
    <input type="hidden" value="@Model.TestDetailId" id="UserTestDetailId" />

    <input type="hidden" value="@Model.AnswerType" id="AnswerType" />

    @if (Model.QuestionType == 1 && Model.AnswerType == 1)
    {
        if (string.IsNullOrEmpty(Model.Answer))
        {
            <div class="col-sm-12" style="padding: 20px 25px 20px 30px;">
                <ul style="list-style:none;">
                    <li>
                        <div class="radio radio-info">
                            <input type="radio"  name="optradio" value="1">
                            <label >@Model.Option1</label>
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info">
                            <input type="radio"  name="optradio" value="2">
                            <label >@Model.Option2</label>
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio3">
                            <input type="radio"  name="optradio" value="3">
                            <label >@Model.Option3</label>
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio4">
                            <input type="radio"  name="optradio" value="4">
                            <label >@Model.Option4</label>
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio5">
                            <input type="radio"  name="optradio" value="5">
                            <label >@Model.Option5</label>
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio6">
                            <input type="radio"  name="optradio" value="6">
                            <label >@Model.Option6</label>
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio7">
                            <input type="radio"  name="optradio" value="7">
                            <label >@Model.Option7</label>
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio8">
                            <input type="radio"  name="optradio" value="8">
                            <label >@Model.Option8</label>
                        </div>
                    </li>
                </ul>

            </div>
            <script>
                for(var i=@Model.OptionCount+1; i<=8;i++)
                {
                    $("#radio"+i).hide();
                }
            </script>
        }
        else
        {
            <div class="col-sm-12" style="padding: 20px 25px 20px 30px;">

                <ul style="list-style:none;">
                    <li>
                        <div class="radio radio-info">
                            @if (Model.Answer.Trim() == "1")
                            {
                                <input type="radio"  name="optradio" value="1" checked="checked">
                                <label >@Model.Option1</label>
                            }
                            else
                            {
                                <input type="radio"  name="optradio" value="1">
                                <label >@Model.Option1</label>
                            }

                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info">
                            @if (Model.Answer.Trim() == "2")
                            {
                                <input type="radio"  name="optradio" value="2" checked="checked">
                                <label >@Model.Option2</label>
                            }
                            else
                            {
                                <input type="radio"  name="optradio" value="2">
                                <label >@Model.Option2</label>
                            }
                        </div>
                    </li>
                    <li>
                        <div class="radio radio-info" id="radio3">
                            @if (Model.Answer.Trim() == "3")
                            {
                                <input type="radio"  name="optradio" value="3" checked="checked">
                                <label >@Model.Option3</label>
                            }
