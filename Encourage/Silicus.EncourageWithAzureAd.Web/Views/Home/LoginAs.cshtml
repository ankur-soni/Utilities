@model Silicus.EncourageWithAzureAd.Web.Models.LoginAsViewModel
@{
    ViewBag.Title = "Login As";
}

<div class="row white-bg header-row">
    <nav class="" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
        </div>
    </nav>
    <div class="col-lg-11 col-md-11 col-sm-11">
        <h1 class="header-name">Login As</h1>
    </div>
</div>
<div class="">
    <div class="row">
        <div class="col-sm-12">
            <div class="box M-T15 M-B60">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 text-danger">
                            @Html.ValidationMessage("error")
                        </div>
                    </div>

                    @using (Html.BeginForm("LoginAs", "Home", FormMethod.Post, new { id = "frmLoginAs" }))
                    {
                        <div class="f1">
                            <div class="row">
                                <div class="col-lg-3 col-md-4 col-sm-5 M-B10">
                                    <div class="">
                                        @Html.Label("Login As Username", htmlAttributes: new { @class = "requiredfeild" })
                                        @*@Html.DropDownListFor(model => model.Username, Model.UsersWithMultipleRoles as SelectList, "Select", new { @class = "form-control", id = "UserName", style = "margin-bottom:0px;!important" })
                                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })*@
                                        
                                        @Html.TextBoxFor(u => u.Username, new { @class = "form-control", maxlength = 200, required = "" })
                                        @Html.ValidationMessageFor(u => u.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-actions pull-left">
                                    <button type="submit" value="Login" class="btn btn-success btn-nav btn-next"> Login</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Css/select2.css" rel="stylesheet" />
<script src="~/js/select2.min.js"></script>

<script>
    $("#UserName").select2().on("change", function (e) {
        $(this).valid(); //jquery validation script validate on change
    });
</script>