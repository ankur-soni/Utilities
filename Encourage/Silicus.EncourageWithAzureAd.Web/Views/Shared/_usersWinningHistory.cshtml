
@model List<Silicus.Encourage.Services.Models.UserWinningHistory>


@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="el-element-overlay m-b-40">
            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-4">
                <div class="blue-box">
                    <div class="el-card-item">
                        <div class="el-card-avatar el-overlay-1">
                            <div class="el-overlay">
                                <ul class="el-info">
                                    <li>
                                        <a class="btn default btn-outline image-popup-vertical-fit" href="@Url.Action()">
                                                <i class="fa fa-file-text-o fa-2x" aria-hidden="true"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="el-card-content">
                            <h3 class="box-title">@Html.Label(System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Convert.ToInt32(item.AwardMonth)) + "-" + item.AwardYear)</h3>
                            @Html.Label("Achivment :")
                            @Html.DisplayFor(x => item.AdminComment)
                            @Html.LabelFor(x => item.ManagerComment, "Manager Comment :")
                            @Html.DisplayFor(x => item.ManagerComment)
                            @Html.LabelFor(x => item.AverageScore, "Average Score :")
                            @Html.DisplayFor(x => item.AverageScore)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row" id="noHistoricalData">
        <div class="col-sm-12">
            <div class="alert alert-danger">
                <span class="text-danger" style="font-size:20px">No winning history!</span>
            </div>
        </div>
    </div>
}