    var actname = @ViewContext.RouteData.Values["action"].ToString().ToLower();
}

@if (!Request.IsAuthenticated)
{
   
    <ul class="headernav1">
        <li class="loginlink">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
    
}
<input type="hidden" value="" id="hfloggedInUser" /> 
<script type="text/javascript">
    $(document).ready(function () {

        function getJsCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) == ' ') c = c.substring(1);
                if (c.indexOf(name) != -1) {
                    return c.substring(name.length, c.length);
                }
            }
            return "";
        }
      
        $("#hfloggedInUser").val(getJsCookie("LoggedInUserName"));
    });

</script>
