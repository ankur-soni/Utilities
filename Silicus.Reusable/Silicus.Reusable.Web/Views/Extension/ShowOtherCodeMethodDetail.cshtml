@model Silicus.FrameworxProject.Models.OtherCode

@{
    ViewBag.Title = "ExtensionDetail";
}
<script src="https://cdn.rawgit.com/google/code-prettify/master/loader/run_prettify.js"></script>

<style>
    .displaycode {
        background-color: #EFF0F1;
    }

    pre {
        display: block;
        margin: 2em 0;
        white-space: pre;
        overflow: auto;
        width: 100%;
        line-height: 1.4;
        border: 1px solid #ccc;
        background: #ece9d8;
        padding: 1em;
    }

        /* JS: adding CODE captions */
        pre.JS {
            margin-top: 0;
        }

        pre code {
            font-size: initial;
        }

    .JScodeCaption {
        margin-top: 2em;
        color: #999;
        font: .9em "Verdana", sans-serif;
        padding-bottom: .2em;
    }
    .panel-heading{
        background-color: #ADD8E6 !important;
    }
    #navigation{
        float:right;
    }
</style>
