    <div class="row">
        <div class="col-sm-12 col-xs-12 col-lg-12 col-md-12">
            <div class="panel panel-default" id="extensionform">
                <div class="panel-heading"><h2>@Html.DisplayFor(model => model.MethodName)</h2></div>
                <div class="panel-body">
                    <div id="navigation">
                        @Html.ActionLink("Edit", "EditOtherUsefullCode", "Extension", new { id = Model.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Back", "ShowExtensionCode", "", new { @class = "btn btn-info" })
                    </div>
                    <div id="descriptiondiv">
                        <h3>Description</h3>
                        @Html.DisplayFor(model => model.Description)
                    </div>
                    <div>
                        <pre class="prettyprint">
                        <code title="The caption for this block">
                                 @Html.DisplayFor(model => model.Code)
                            </code>
                        </pre>
                    </div>
                    <div id="exampleusage">
                        <h3>Example</h3>
                        @Html.DisplayFor(model => model.ExampleUsage)
                    </div>
