@*@model IEnumerable<Silicus.FrameworxProject.Models.ExtensionSolution>*@
@using PagedList.Mvc;
@model PagedList.IPagedList<Silicus.FrameworxProject.Models.OtherCode>
@{
    ViewBag.Title = "ExtenisonCodeList";
}
<style>
    .serachpanel {
        margin-top: 1%;
    }

    #serachinput {
        float: right;
        width: 349px;
    }
</style>
<div class="panel panel-primary serachpanel">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-4 col-lg-4 col-sm-4">
                <h3 class="searchHeading">Search Code Methods</h3>
            </div>
            <div class="col-md-8 col-lg-8 col-sm-8">
                <div class="navbar-form" id="serachinput">
                    <div class="input-group add-on">
                        <input class="form-control" placeholder="Search" name="searchString" id="searchString" type="text" onkeyup="getdetail()">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div id="content" class="snippet-hidden">
            <div id="mainbar">
                <div id="navigation">
                    @Html.ActionLink("Extension Methods", "ShowExtensionCode", "", new { @class = "btn btn-info" })
                </div>
                <div class="subheader">
                    <h1 id="h-all-questions">My Submmited Code Methods</h1>

                    <div id="tabs">
                        <a id="newest" class="youarehere" href="@Url.Action("ShowMyOtherCode", "Extension", new { sortOrder = ViewBag.DateSortParm })" data-nav-xhref="" title="The most recently added Extension Code" data-value="newest" data-shortcut="N">
                            Newest
                        </a>
                        <a id="frequent" href="@Url.Action("ShowMyOtherCode", "Extension", new { sortOrder = ViewBag.FrequentSearchedCountSortParm })" onclick="getfrequentSearched()" data-nav-xhref="" title="Most Frequent Searched Extension Code" data-value="frequent" data-shortcut="F">
                            Frequent Searched
                        </a>
                    </div>
                </div>

                <div id="questions">
                    @foreach (var item in Model)
                    {
                        <div class="question-summary">
                            <h3><a href='@Url.Action("ShowOtherCodeMethodDetail", "Extension",new { id = item.Id })'>@Html.DisplayFor(modelItem => item.MethodName)</a></h3>
                            <div class="truncate">@Html.DisplayFor(modelItem => item.Description)</div>
                        </div>
                    }
                </div>
                @Html.PagedListPager(Model, page => Url.Action("ShowMyOtherCode", new { page, sortOrder = ViewBag.CurrentSort }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script>
    function getdetail() {

        var searchString = $("#searchString").val();

        var url = "/Extension/SearchOtherCodeMethodByTitle";
        $.get(url, { searchString: searchString }, function (data) {

            $("#questions").html(data);
        });
    }

    $(document).ready(function () {
        var url = document.location;
        var y = new String(url);

        if (y.includes("count") || y.includes("count_desc")) {
            $("#newest").removeClass("youarehere");
            $("#frequent").addClass("youarehere");
        }
        else {
            $("#newest").addClass("youarehere");
            $("#frequent").removeClass("youarehere");
        }
    });
</script>