@model IEnumerable<Silicus.EncourageWithAzureAd.Web.Models.ProcessesToLockOrUnLockViewModel>
    @{ 
        Layout = "";
    }
<style>
    td {
        text-align: center;
    }

    th {
        text-align: center;
    }
</style>
@if (Model.Count() > 0)
{
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td style="padding-left:20%">
                    @Html.CheckBoxFor(modelItem => item.Status,htmlAttributes: new { style = "display:block;height:20px;width:20px;", id = item.Id ,Class = "process-to-lock", value = item.Name})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }

    </table>
}
else
{
    @Html.Label("Sorry! No process available", htmlAttributes: new { style = "color:red" })
}
