@model IEnumerable<Silicus.UtilityContainer.Models.DataObjects.Utility>

@{
    ViewBag.Title = "Dashboard";
    var isRoleAvailable = ViewBag.noRoleForCUrrentUser;
}


<div class="row white-bg header-row M-T5">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h1 class="header-name">Dashboard</h1>
    </div>
</div>
<div class="row">
    <div class="box M-T5" style="border-top:5px solid #acb3b7;">
        <div class="f1">
            <div class="row">
                @if (Model != null)
            {
                foreach (var item in Model)
                {
                    if (item.Name == "Reusable")
                    {
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="el-element-overlay m-b-40">
                                    <div class="white-box">
                                        <div class="el-card-item">
                                            <div class="el-card-avatar el-overlay-1">
                                                <img src="~/Images/encourageLogo.png" />
                                                <div class="el-overlay">
                                                    <ul class="el-info">
                                                        <li>
                                                            <a class="btn default btn-outline image-popup-vertical-fit" href="@item.Url?utilityID=@item.Id" target="_blank" title="@item.Name">
                                                                <i class="fa fa-eye fa-2x" aria-hidden="true"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="el-card-content">
                                                <h3 class="box-title">Utility for Award Nomination and Winner Declaration.</h3>


                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        if (item.Name == "Encourage")
                        {
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="el-element-overlay m-b-40">
                                    <div class="white-box">
                                        <div class="el-card-item">
                                            <div class="el-card-avatar el-overlay-1">
                                                <img src="~/Images/encourageLogo.png" />
                                                <div class="el-overlay">
                                                    <ul class="el-info">
                                                        <li>
                                                            <a class="btn default btn-outline image-popup-vertical-fit" href="@item.Url?utilityID=@item.Id" target="_blank" title="@item.Name">
                                                                <i class="fa fa-eye fa-2x" aria-hidden="true"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="el-card-content">
                                                <h3 class="box-title">Utility for Award Nomination and Winner Declaration.</h3>


                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (item.Name == "Ensure")
                        {
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="el-element-overlay m-b-40">
                                    <div class="white-box">
                                        <div class="el-card-item" style="padding-bottom:0px;">
                                            <div class="el-card-avatar el-overlay-1">
                                                <img src="~/Images/encourageLogo.png" />
                                                <div class="el-overlay">
                                                    <ul class="el-info">
                                                        <li>
                                                            <a class="btn default btn-outline image-popup-vertical-fit" href="@item.Url?utilityID=@item.Id" target="_blank" title="@item.Name">
                                                                <i class="fa fa-eye fa-2x" aria-hidden="true"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="el-card-content">
                                                <h3 class="box-title">Reusable is collection of all development component.</h3>


                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (item.Name == "Enquire")
                        {
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="el-element-overlay m-b-40">
                                    <div class="white-box">
                                        <div class="el-card-item" style="padding-bottom:0px;">
                                            <div class="el-card-avatar el-overlay-1">
                                                <img src="~/Images/encourageLogo.png" />
                                                <div class="el-overlay">
                                                    <ul class="el-info">
                                                        <li>
                                                            <a class="btn default btn-outline image-popup-vertical-fit" href="@item.Url?utilityID=@item.Id" title="@item.Name">
                                                                <i class="fa fa-eye fa-2x" aria-hidden="true"></i>
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="el-card-content">
                                                <h3 class="box-title">Lorem Ipsum is simply dummy text</h3>


                                                <br>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }

                }
               
            </div>
            @*<div class="row">
               
               
            </div>*@
        </div>
    </div>
</div>
