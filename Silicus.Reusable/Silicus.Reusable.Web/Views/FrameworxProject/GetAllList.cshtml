@model IEnumerable<Silicus.FrameworxProject.Models.Frameworx>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<style>
    .TitleDiv {
        height: 250px;
        text-align: center;
        background-color: crimson;
        position: relative;
        cursor: pointer;
        background: -webkit-linear-gradient(top, #34696f, #2f5f63);
        background: -moz-linear-gradient(top, #34696f, #2f5f63);
        background: -o-linear-gradient(top, #34696f, #2f5f63);
        background: -ms-linear-gradient(top, #34696f, #2f5f63);
        background: linear-gradient(top, #34696f, #2f5f63);
        -webkit-box-shadow: 0 8px 0 #1b383b;
        -moz-box-shadow: 0 8px 0 #1b383b;
        box-shadow: 0 8px 0 #1b383b;
    }

    .maintitle {
        color: black;
        position: inherit;
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, -50%);
    }

    .modal-dialog {
        background-color: white;
    }

    .modal-dialog {
        width: 1000px;
        margin-top: 100px;
    }

    .modal-body {
        float: left;
        width: 920px;
        overflow-y: auto;
        height: 400px;
        padding-left: 60px;
        padding-right: 20px;
    }

    .carousel-inner1 {
        padding-left: 35px;
        padding-right: 35px;
    }

    .carousel-control {
        width: 7%;
    }

    .modal-footer {
        margin-top: 400px;
    }
</style>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="TitleDivTemplate TitleDiv" data-toggle="modal" data-target="#myModal" onclick="getdetail('@(item.Id)','@(item.Title)')" my-data="@item.Id" my-title ="@item.Title">
                    <h3 class="maintitle">@Html.DisplayFor(modelItem => item.Title)</h3>
                </div>
            </div>
        }
    </div>
    <div id="divTiles" style="display:none">
        <input type="text" id="currentTile" name="currentTile" value="" />
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="carousel-inner">

            </div>
        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" onclick="prevSlide()">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" onclick="nextSlide()">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

