                    <li>
                        <div class="checkbox" id="checkbox5">
                            <input id="optcheckbox5" type="checkbox" name="optcheckbox" value="5">
                            <label >@Model.Option5</label>
                        </div>
                    </li>
                    <li>
                        <div class="checkbox" id="checkbox6">
                            <input id="optcheckbox6" type="checkbox" name="optcheckbox" value="6">
                            <label >@Model.Option6</label>
                        </div>
                    </li>
