@model Silicus.Ensure.Models.DataObjects.Panel
<form>
    <div class="M-B20">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="">
            <div class="col-md-3">@Html.LabelFor(model => model.PanelName) <b color:Red;">*</b></div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.PanelName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PanelName, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $(document).ready(function () {
        $('#PanelName').val("");
    });

    $("form input[data-val-remote-url]").on({
        focus: function () {
            $(this).closest('form').validate().settings.onkeyup = false;
        },
        blur: function () {
            $(this).closest('form').validate().settings.onkeyup =
                $.validator.defaults.onkeyup;
        }
    });
</script>