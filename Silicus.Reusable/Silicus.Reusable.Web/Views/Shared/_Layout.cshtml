<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FRAMEWORX</title>
    <link rel="shortcut icon" href="~/Images/favicon.ico" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendoCSS")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/LESS/style.css" rel="stylesheet" />
</head>
<body class="container-fluid">
    <div class="row top-header bbl">
        <div class="col-sm-4">
            <div class="pll ptm pbs"><img src="~/Images/logo.jpg" class="mts mbs" alt="Silicus Logo" title="Silicus Encloud" /></div>
        </div>
        <div class="col-sm-8">
            <div class="text-center">
                <nav class="navbar navbar-static-top  " role="navigation" style="margin-bottom: 0">
                    <ul class="nav navbar-top-links navbar-right">
                        @Html.Partial("_LoginPartial")
                        @if (Request.IsAuthenticated)
                        {
                            var userName = @User.Identity.Name;
                            var data = userName.Split('.', '@');
                            <li class="dropdown">
                                <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
                                    <span class="hidden-sm hidden-xs">
                                        <span class="m-r-sm text-muted welcome-message">Welcome @data[0] @data[1]</span> <i class="fa fa-chevron-down"></i>
                                    </span>
                                    <span class="hidden-md hidden-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-user-menu">
                                    <li>
                                        <a href='@Url.Action("SignOut", "Account")'>
                                            <div>
                                                Logout
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </nav>
            </div><!-- pad -->
        </div>
    </div>
    <div class="row">
        <div id="wrapper" class="wrapper">
            <!-- START LEFT MENU -->
            <div class="sidebar-wrapper">
                <nav class="navbar-default navbar-static-side sidebar" role="navigation">
                    <div class="sidebar-collapse">
                        <ul class="nav metismenu" id="side-menu">
                            <li class="active">
                                <a href="#"><i class="fa fa-user"></i><span class="nav-label">Frameworx</span> <span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href='@Url.Action("Dashboard", "FrameworxProject")' class="active">Dashboard</a></li>
                                    <li><a href="@Url.Action("ShowAllProductBacklog", "ProductBacklog")" class="active">Product Backlog</a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="#"><i class="fa fa-file-code-o"></i><span class="nav-label">Shared Code</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href='@Url.Action("ShowExtensionCode", "Extension")' class="active">Extension Method</a></li>
                                    <li><a href='@Url.Action("ShowOtherCode", "Extension")' class="active">Code Snippets</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div id="page-wrapper" class="page-wrapper">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="footer fixed_full">
        <div>
            <strong>&copy;Copyright</strong> 2000 -
            <script>document.write(new Date().getFullYear())</script> Silicus Technologies
        </div>
    </div>
    <div class="loader-overlay" style="display:none;">
        <div class="loader">

        </div>
    </div>
    @Scripts.Render("~/bundles/requiredJS")
    @Scripts.Render("~/bundles/kendoJS")
    @RenderSection("scripts", required: false)
</body>
</html>
